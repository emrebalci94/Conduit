@model ArticleDto
@{
    ViewData["Title"] = "Edit Article";
    string tags = String.Join(",", Model.Tags.ToArray());
}


<br />
@if (ViewBag.Error != null)
{
<span>@ViewBag.Error</span> 
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form method="post">
                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-book"></i>   Yeni Makale Yayınla
                    </div>
                    <div class="card-body">
                        <input type="hidden" asp-for="Id" value="@Model.Id" /> @* Urldeki Idyi alıyor düzeltilecek. *@

                        <div class="form-group">
                            <label class="col-lg-3 control-label">Başlık:</label>
                            <div class="col-lg-12 ">
                                <input class="form-control" asp-for="Title" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Tanım:</label>
                            <div class="col-lg-12 ">
                                <input class="form-control" asp-for="Description" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">İçerik:</label>
                            <div class="col-lg-12 ">
                                <textarea class="form-control" asp-for="Body" rows="4"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Etiketler:</label>
                            <div class="col-lg-12 ">
                                <input class="form-control" id="tagler" name="tagler" type="text" data-role="tagsinput" value="@tags">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-12 ">
                                <button class="btn btn-outline-success btn-block" type="submit"> <i class="fa fa-paper-plane"></i> Güncelle</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    $('#tagler').tagsinput({
        tagClass: 'btn btn-outline-secondary btn-sm '
    });
</script>