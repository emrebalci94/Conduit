@model UserDto
@{
    ViewData["Title"] = "User/Profile";
}


<div class="container" style="padding-top: 60px;">
    <!-- left column -->
    <form role="form" method="post" enctype="multipart/form-data">
        <div class="row">

            <div class="col-md-4 col-sm-4 col-xs-12">
                <div class="text-center">
                    @{
                        var img = Model.Image ?? "http://via.placeholder.com/300x300";
                    }

                    <img src="@img" class=" rounded-circle embed-responsive" alt="avatar">
                    <br />
                 
                    <input type="file" class="text-center center-block well well-sm" name="profileImg">
                    <p>yada</p>
                    <input type="url" class="form-control" placeholder="Resimin linkini buraya yazın." name="profileImg">

                </div>
            </div>
            <!-- edit form column -->
            <div class="col-md-8 col-sm-8 col-xs-12 ">
                <div class="card">
                    <div class="card-header">
                        <h3>Profil Bilgileri</h3>

                    </div>
                    <div class="card-body">

                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Image" />

                        <div class="form-group">
                            <label class="col-lg-3 control-label">Kullanıcı Adı:</label>
                            <div class="col-lg-8 ">
                                <input class="form-control" readonly asp-for="UserName" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Ad:</label>
                            <div class="col-lg-8">
                                <input class="form-control" asp-for="FirstName" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Soyad:</label>
                            <div class="col-lg-8">
                                <input class="form-control" asp-for="LastName" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Email:</label>
                            <div class="col-lg-8">
                                <input class="form-control" asp-for="Email" type="email">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">Kısaca kendinden bahset:</label>
                            <div class="col-lg-8">
                                <textarea class="form-control" asp-for="Bio" rows="3"></textarea>
                            </div>
                        </div>

                        <div class="col-lg-12">
                            <a class="btn btn-outline-warning  btn-lg col-lg-4" tabindex="7" asp-action="Index" asp-controller="Home"> Anasayfa</a>

                            <input type="submit" value="Kaydet" class="btn btn-outline-success  btn-lg col-lg-4" tabindex="8" id="btnKaydet">

                        </div>

                    </div>
                </div>
            </div>


        </div>
    </form>
</div>

